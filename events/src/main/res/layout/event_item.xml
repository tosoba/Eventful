<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="event" type="com.example.coreandroid.model.EventUiModel"/>
        <variable name="sliderAdapter" type="ss.com.bannerslider.adapters.SliderAdapter"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

        <ss.com.bannerslider.Slider
                android:id="@+id/event_images_slider"
                android:layout_height="200dp"
                android:layout_width="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                sliderAdapter="@{sliderAdapter}"
                app:slider_interval="10000"
                app:slider_loopSlides="true"
                app:slider_defaultBanner="1"
                app:slider_indicatorSize="12dp"
                app:slider_emptyView="@layout/banner_slider_placeholder"/>

        <TextView android:id="@+id/event_item_title_text_view"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="10dp"
                  android:maxLines="1"
                  android:textSize="20sp"
                  android:textStyle="bold"
                  android:text="@{event.title}"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintTop_toBottomOf="@id/event_images_slider"
                  app:layout_constraintRight_toRightOf="parent"/>

        <TextView android:id="@+id/event_item_address_text_view"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:text="@{event.address}"
                  android:layout_marginLeft="10dp"
                  app:layout_constraintTop_toBottomOf="@id/event_item_title_text_view"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintRight_toRightOf="parent"/>

        <!-- TODO: move the event description into an expandable fragment thingy like in flutter - only show the expand arrow if description is available -->
        <TextView android:id="@+id/event_item_desc_text_view"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="5dp"
                  android:layout_marginLeft="10dp"
                  android:maxLines="2"
                  android:ellipsize="end"
                  android:text="@{event.description}"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintRight_toRightOf="parent"
                  app:layout_constraintTop_toBottomOf="@id/event_item_address_text_view"
                  app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
