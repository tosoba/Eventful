<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="event" type="com.example.coreandroid.model.EventUiModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

        <ImageView android:id="@+id/event_item_image_view"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:src="@drawable/event_placeholder"/>

        <TextView android:id="@+id/event_item_title_text_view"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="10dp"
                  android:maxLines="1"
                  android:textSize="20sp"
                  android:textStyle="bold"
                  android:text="@{event.title}"
                  app:layout_constraintLeft_toRightOf="@id/event_item_image_view"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintRight_toRightOf="parent"/>

        <TextView android:id="@+id/event_item_desc_text_view"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="5dp"
                  android:layout_marginLeft="10dp"
                  android:maxLines="2"
                  android:ellipsize="end"
                  android:text="@{event.description}"
                  app:layout_constraintLeft_toRightOf="@id/event_item_image_view"
                  app:layout_constraintRight_toRightOf="parent"
                  app:layout_constraintTop_toBottomOf="@id/event_item_title_text_view"/>

        <TextView android:id="@+id/event_item_address_text_view"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:text="@{event.address}"
                  android:layout_marginLeft="10dp"
                  app:layout_constraintLeft_toRightOf="@id/event_item_image_view"
                  app:layout_constraintRight_toRightOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
