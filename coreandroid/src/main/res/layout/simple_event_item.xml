<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="event"
                type="com.example.coreandroid.ticketmaster.Event" />

        <variable
                name="eventClicked"
                type="android.view.View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:clickable="@{eventClicked != null}"
            android:onClick="@{eventClicked}"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingRight="15dp">

        <ImageView
                android:id="@+id/event_image_view"
                event="@{event}"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/blueText"
                android:padding="5dp"
                android:text='@{event.startTime ?? "No info"}'
                android:textAlignment="center"
                android:textColor="#fff"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/event_image_view"
                app:layout_constraintRight_toRightOf="@id/event_image_view" />

        <TextView
                android:id="@+id/event_kind_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:text='@{event.kind ?? "Unknown"}'
                android:textAllCaps="true"
                android:textColor="@color/lightGrayText"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/event_name_text_view"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintLeft_toRightOf="@id/event_image_view"
                app:layout_constraintRight_toLeftOf="@id/event_price_text_view"
                app:layout_constraintTop_toTopOf="@id/event_image_view" />

        <TextView
                android:id="@+id/event_price_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:text="15$"
                android:textAllCaps="true"
                android:textColor="@color/greentText"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/event_name_text_view"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintLeft_toRightOf="@id/event_kind_text_view"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/event_image_view" />

        <TextView
                android:id="@+id/event_name_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@{event.name}"
                android:textColor="@color/darkGrayText"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/event_address_text_view"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintLeft_toRightOf="@id/event_image_view"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/event_price_text_view" />

        <TextView
                android:id="@+id/event_address_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@{event.formattedAddress}"
                android:textColor="@color/blueText"
                app:layout_constraintBottom_toBottomOf="@id/event_image_view"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintLeft_toRightOf="@id/event_image_view"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/event_name_text_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>